.leftSide{
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 100%;
}
.rightSide{
  position: absolute;
  top: 0;
  left: 200rpx;
  width: 550rpx;
  height: 100%;
  background: white;
}
.category-name{
  height: 80rpx;
  line-height: 80rpx;
  text-align: lef;
  padding: 10rpx 0;
  padding-left: 20rpx;
  font-weight: 500;
  font-size: 0.75rem;
  color: #707070;
}

.current-category-index {
  color: #333333;
  background: white;
  border-left: 8rpx solid #eeb641;
}

.product {
  display: flex;
  width: 100%;
  height: 200rpx;
  margin: 10rpx 20rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
}
.product-desc{
  margin-top: 20rpx;
}
.product-price{
  position: relative;
  height: 200rpx;
  width: 300rpx;
  display: flex;
  align-items: center;
}
.add-image {
  position: absolute;
  right: 0;
}