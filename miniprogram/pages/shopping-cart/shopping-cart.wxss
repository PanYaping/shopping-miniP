page {
  height: 100%;
  width: 100%;
}

.product-list {
  background: white;
  padding: 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  bottom: 110rpx;
  top: 20rpx;
  overflow-y: scroll;
}

.product-item {
  display: flex;
  height: 200rpx;
}

.product-item switch {
  width: 10%;
  height: 100%;
  line-height: 200rpx;
  margin: 10rpx 0;
}

.product-image {
  width: 30%;
  height: 100%;
}

.product-desc {
  width: 60%;
  height: 100% margin-top: 20rpx;
}

.product-price {
  position: relative;
  height: 200rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.add-image {
  position: absolute;
  right: 0;
}

.minus-image {
  position: absolute;
  right: 100rpx;
}

.numberText {
  display: inline-block;
  width: 60rpx;
  text-align: center;
  position: absolute;
  right: 40rpx;
}

.count-all {
  position: absolute;
  background: white;
  bottom: 0;
  height: 110rpx;
  padding: 10rpx 20rpx;
  width: 100%;
  display: inline-block;
}

.left-count {
  float: left;
}

.right-count {
  float: right;
}

.count-all switch {
  line-height: 90rpx;
}

.count-all text {
  display: inline-block;
  line-height: 90rpx;
}

.text-btn {
  display: inline-block;
  box-sizing: border-box;
  line-height: 90rpx;
  text-align: center;
  background: #eeb641;
  color: white;
  width: 150rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;

}